<section class="blog-listing">
  <div class="cb-container">
    <h1 class="cb-heading-ar">Claybear {{ blog.title }}</h1>
    <p>A collection of stories, tales and adventures from the ClayBear club</p>
  </div>
</section>
{% paginate blog.articles by 12 %}
  <section class="cb-collection-section cb-product-h svg-curv-section">
    <div class="cb-container">
      <ul class="blog-tabs">
        {% for link in linklists.blogs.links -%}
          <li {% if link.current %}class="active"{% endif %}>{{ link.title | link_to: link.url }}</li>
        {%- endfor %}
      </ul>
      <div class="cb-row blogs-list">
        {% for article in blog.articles %}
          <div class="cb-col-4">
            {% render 'blog-card', article: article %}
          </div>
        {% endfor %}
      </div>
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    </div>
  </section>
{% endpaginate %}